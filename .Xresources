! XFT SETTINGS
!________________________________________________
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                false
! Xft.hintstyle:              hintslight

! URXVT GENERAL CONFIG
!------------------------------------------------
URxvt.allow_bold: false
URxvt.scrollBar: false
URxvt.internalBorder: 15
URxvt.perl-lib: /home/anon/.urxvt/ext/font-size
URxvt.perl-ext-common: font-size

! URXVT FONT SETTINGS
!------------------------------------------------
URxvt.letterSpace: -1
URxvt.font: xft:IBM Plex Mono:size=9
font: xft:IBM Plex Mono:size=9

Xcursor.theme: Paper

